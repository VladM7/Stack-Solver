<Page
    x:Class="Stack_Solver.Views.Pages.SKULibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stack_Solver.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SKU Library Page"
    d:DataContext="{d:DesignInstance local:DashboardPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ui:Button Content="Add SKU" Margin="0,0,8,0" VerticalAlignment="Top" Icon="{ui:SymbolIcon Add24}" Appearance="Primary" Command="{Binding ViewModel.AddSkuCommand, Mode=OneWay}"/>
            <ui:Button Content="Import" Margin="0,0,8,0" VerticalAlignment="Top" Icon="{ui:SymbolIcon ArrowDownload24}" IsEnabled="False"/>
            <ui:Button Content="Export" Margin="0,0,8,0" VerticalAlignment="Top" Icon="{ui:SymbolIcon ArrowExportUp24}" IsEnabled="False"/>
            <ui:Button x:Name="helpButton" Icon="{ui:SymbolIcon Question24}" Click="HelpButton_Click" Cursor="Help">
                <WrapPanel>
                    <ui:TextBlock Text="Help"/>
                    <ui:Flyout x:Name="helpFlyout" Placement="Mouse" Width="0" Height="0" MinWidth="0" MinHeight="0" VerticalAlignment="Top">
                        <ui:TextBlock>
                            Here you can add different types of SKUs.
                            <LineBreak/>
                            You can adjust the specific quantities in the generation page.
                            <LineBreak/>
                            See the tip at the bottom of the page for details.
                        </ui:TextBlock>
                    </ui:Flyout>
                </WrapPanel>
            </ui:Button>
        </StackPanel>

        <ui:DataGrid x:Name="skuDataGrid" 
            Grid.Row="1"
            ItemsSource="{Binding ViewModel.Skus, Mode=TwoWay}"
            AutoGenerateColumns="True"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            Margin="0,20,0,0" 
            AutoGeneratingColumn="skuDataGrid_AutoGeneratingColumn"
            CellEditEnding="SkuDataGrid_CellEditEnding"
            PreviewKeyDown="SkuDataGrid_PreviewKeyDown"/>

        <StackPanel Orientation="Horizontal" Height="60" VerticalAlignment="Center" Grid.Row="2">
            <ui:SymbolIcon Symbol="Info24" Width="30" Height="30" VerticalAlignment="Top"/>
            <ui:TextBlock VerticalAlignment="Center" Height="50" Width="580" TextWrapping="Wrap">Tip: You can edit SKUs by double-clicking on the desired property and you can remove SKUs by selecting them and pressing Delete.</ui:TextBlock>
        </StackPanel>
    </Grid>
</Page>
